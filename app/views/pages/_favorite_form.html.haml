- if @page.favorite?(@page, current_user)
  %li.like_off
    = link_to 'いいね！をはずす', favorite_path(id: @page.id), method: :delete, remote: true, class: "like_off_btn" unless @page.user_id == current_user.id
- else
  %li.like_on
    = link_to 'いいね！', favorites_path(blog_id: @page.id), method: :post, remote: true, class: "like_on_btn" unless @page.user_id == current_user.id